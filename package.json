{
  "name": "swiss-parcs-ims",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "services:start": "docker compose -f docker-compose.dev.yml up -d --remove-orphans",
    "services:stop": "docker compose -f docker-compose.dev.yml down --remove-orphans",
    "services:destroy": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "build": "yarn run lint && cross-env NODE_OPTIONS=--no-deprecation next build",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation payload migrate && cross-env NODE_OPTIONS=--no-deprecation next start",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "migrate:create": "cross-env NODE_OPTIONS=--no-deprecation payload migrate:create && next lint --fix",
    "migrate": "cross-env NODE_OPTIONS=--no-deprecation payload migrate",
    "generate:types": "payload generate:types",
    "generate:importMap": "payload generate:importMap",
    "standalone-script": "tsx ./src/scripts/standalone-script.ts",
    "email:dev": "email dev",
    "email:export": "email export",
    "typecheck": "npx tsc --noEmit",
    "up": "yarn upgrade-interactive",
    "self-update": "yarn set version latest && yarn",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.67.0",
    "@payloadcms/email-nodemailer": "3.67.0",
    "@payloadcms/next": "3.67.0",
    "@payloadcms/plugin-nested-docs": "3.67.0",
    "@payloadcms/richtext-lexical": "3.67.0",
    "@payloadcms/richtext-slate": "3.67.0",
    "@payloadcms/storage-s3": "3.67.0",
    "@payloadcms/ui": "3.67.0",
    "@react-email/components": "^0.5.7",
    "@react-email/render": "^1.4.0",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "cross-env": "^10.1.0",
    "deepl-node": "^1.22.0",
    "es-toolkit": "^1.42.0",
    "form-data": "^4.0.5",
    "graphql": "^16.12.0",
    "he": "^1.2.0",
    "ky": "^1.14.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.556.0",
    "next": "15.5.7",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "payload": "3.67.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-email": "^4.3.2",
    "react-i18next": "^15.7.4",
    "sharp": "^0.34.5",
    "tslog": "^4.10.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/he": "^1.2.3",
    "@types/jest": "^30.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "autoprefixer": "^10.4.22",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.5.7",
    "eslint-plugin-jsonc": "^2.21.0",
    "jest": "^30.2.0",
    "jest-environment-node": "30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.6",
    "typescript": "5.9.3"
  },
  "packageManager": "yarn@4.12.0"
}
